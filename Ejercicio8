Invertir los digitos de un numero

#include "stdafx.h"
#include <iostream>
#include "conio.h" 
using namespace std;

void main()
{int d,c,n;
   c=0;
   cout<<"Ingrese el numero a calcular";
   cin>>n;
   while(n>0)
   {
	   d=n%10;
	   c=c*10+d;
	   n=n/10;
   }
   cout<<"El numero invertido es: "<<c;
   getch();
}
