Ejercicio 16

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;


void main()
{ int A[10],s,m,a,aux;
 int n;
 m=0;
 

  
   cout<<"Ingrese la magnitud del vector";
   cin>>n;
  
   for(int i=0;i<n;i++){
	   cout<<"Ingrese los valores del vector";
	   cout<<"VÂ¨["<<i<<"]";
       cin>>A[i];
   }
   for(int i=0;i<n;i++){
	   s=0;
	   for(int j=0;j<n;j++)
          {
			  if(A[i]==A[j]&& i!=j)
			  {
				  s=s+1;
				  aux=i;
			  }
          }
       }
   if(s>=m)
   {
	   m=s;
	   a=aux;
   }

   
   cout<<"La moda es: "<<A[a]<<" y tiene "<<m+1<<" repeticiones "<<endl;
   getch();

} 
